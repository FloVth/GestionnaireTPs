<Page x:Class="_2FAR_Gestion.Content.Promo.CreationModificationPromo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2FAR_Gestion.Content.Promo" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ActionPromos">

    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lb_title" Content="Ajouter Une Promotion" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black"/>

        
        <Rectangle Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="3" Fill="#5e17eb" RadiusX="50" RadiusY="50" />
        <Label x:Name="lb_nomPromo" Foreground="White" Content="Nom de la promo :" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbx_nomPromo" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Margin="30,0"/>
        <Button Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" MinWidth="300" MaxWidth="400" MinHeight="10" MaxHeight="40"  Content="Valider" Foreground="White" Background="#5e17eb"  BorderBrush="White" BorderThickness="2" FontSize="18px" Click="Boutton_clicke"/>

    </Grid>

    
</Page>
